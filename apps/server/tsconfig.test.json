{
  "extends": "@folionote/config/tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@folionote/db/__tests__/*": ["../../packages/db/__tests__/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "strictNullChecks": true
  },
  "include": ["__tests__/**/*.ts", "src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
